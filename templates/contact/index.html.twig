{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{{ 'home.contact'|trans }}{% endblock %}

{% block breadcrumb %}
    {% import 'macro/breadcrumb.html.twig' as breadcrumb %}
    {{ breadcrumb.render({
        'home.contact': 'contact_index'
    }) }}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/contact.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="position-relative">
        <div class="bg-contact-image w-100"></div>

        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow-lg">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                    {{ message|trans }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="card-body p-5">
                            <h2 class="mb-4 text-center">{{ 'home.contact'|trans }}</h2>
                            <div class="mb-5 custom_hr mx-auto"></div>
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.lastname) }}
                                </div>

                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.firstname) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.mail) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.tel) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 mb-4">
                                    {{ form_row(form.message) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary">{{ 'contact.submit'|trans|upper }}</button>
                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
